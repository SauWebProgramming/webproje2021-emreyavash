@model RentAndDrive.Models.User

@{
    ViewData["Title"] = "Kullanıcı Güncelle";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<h2>Kategori Güncelle</h2>
<br />
@using (Html.BeginForm("UserUpdate", "UserAdminPanel", FormMethod.Post))
{
    @Html.Label("Kullanıcı Id")
    @Html.TextBoxFor(x => x.UserId, new { @class = "form-control" })
    <br />
    @Html.Label("Kullanıcı Adı")

    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
    <br />
    @Html.Label("Kullanıcı Soyadı")

    @Html.TextBoxFor(x => x.UserSurname, new { @class = "form-control" })
    <br />
    @Html.Label("Email")

    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br />
    @Html.Label("Şifre")

    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
    <br />
    @Html.Label("Doğum Tarihi")

    @Html.TextBoxFor(x => x.BirthDay, new { @class = "form-control" })
    <br />

    @Html.Label("Telefon Numarası")

    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
    <br />

    @Html.Label("Rol")

    @Html.TextBoxFor(x => x.Role, new { @class = "form-control" })
    <br />

    <button class="btn btn-warning">Güncelle</button>

}