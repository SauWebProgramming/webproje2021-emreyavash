@model IEnumerable<RentAndDrive.Models.Car>
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer localizer
@*car component*@
<div class="row">
    @foreach (var item in Model)
    {

        <div class="carContainer col">

            <div class="cars">
                <p><a href="#" class="carName">@item.CarName</a></p>
                <p class="carModel">@item.Model</p>
            </div>
            <div class="btnContainer">
                <button class="btnC">@localizer["Button"]</button>
            </div>
            <div class="carImage">
                <img class="ımage" src="@item.ImageUrl" />
            </div>

            <div class="box">
                <div class="carInfo">
                    <p class="carText">@localizer["CarInfo"]</p>
                    <ul class="list-group">
                        <li>@item.Year</li>
                        <li>@item.Km Km</li>
                        <li>@item.Yakit</li>
                        <li>@item.Vites</li>
                    </ul>

                </div>
                <div class="rentInfo">
                    <p class="carText">@localizer["RentCon"]</p>
                    <ul class="list-group">
                        <li>@item.Price ₺ / @localizer["Day"]</li>
                        <li>@localizer["Age"] </li>
                    </ul>

                </div>
            </div>
        </div>



    }
</div>


