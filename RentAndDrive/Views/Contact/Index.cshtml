@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@*@inject IStringLocalizer<SharedResource> Localizer*@
@inject IViewLocalizer Localizer

@model RentAndDrive.Models.Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="formContainer">
    <div class="formController">
        <form class="form-group" action="Index" asp-controller="Contact" method="post" enctype="multipart/form-data">
            <label>@Localizer["Name"]</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            <br />
            <label>@Localizer["Surname"]</label>
            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
            <br />

            <label>@Localizer["Email"]</label>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", type = "email", placeholder = "email@mail.com" })
            <br />

            <label>@Localizer["Message"]</label>
            @Html.TextBoxFor(x => x.Message, new { @class = "form-control" })
            <br />
            <div class="btnContactContainer">
                <button class="btnContact">@Localizer["Button"]</button>
            </div>
        </form>
    </div>
</div>