@model RentAndDrive.Models.Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="formContainer">
    <div class="formController">
        <form class="form-group" action="Index" asp-controller="Contact" method="post" enctype="multipart/form-data">
            <label>Adınız</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            <br />
            <label>Soyadınız</label>
            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
            <br />

            <label>Email</label>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control",type="email" ,placeholder="ornekemail@mail.com" })
            <br />

            <label>Mesajınız</label>
            @Html.TextBoxFor(x => x.Message, new { @class = "form-control" })
            <br />
            <div class="btnContactContainer">
                <button class="btnContact">Gönder</button>
            </div>
        </form>
    </div>
</div>